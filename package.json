{
  "name": "voicescore",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "electron-dev": "electron .",
    "electron-build": "electron-builder",
    "build:renderer": "cd renderer && npm run build",
    "build": "npm run build:renderer && npm run electron-build",
    "lint": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "@types/node": "^22.7.4",
    "typescript": "^5.5.4"
  },
"build": {
  "appId": "com.example.voicescore",
  "productName": "VoiceScore",
  "files": [
    "electron/**/*",
    "!electron/whisper/**",
    "renderer/dist/**/*",
    "package.json"
  ],
  "extraResources": [
    { "from": "electron/whisper/", "to": "whisper", "filter": ["**/*"] }
  ],
  "directories": { "buildResources": "assets" },
  "asar": true,
  "win": {
    "target": ["nsis", "zip"],
    "signAndEditExecutable": false,
    "artifactName": "VoiceScore-${version}-${arch}.${ext}"
  }
}

}
