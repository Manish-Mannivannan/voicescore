{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "react-jsx",

    "types": ["node", "electron", "react", "react-dom"]
  },
  "include": [
    "renderer/src",
    "renderer",
    "electron"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
